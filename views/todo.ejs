  <body>
    <section id="addtask">
      <h1>Add your Todo Task</h1>
      <form method="post" action="/todo" class="form-inline" >
        Task: <input type="text" name="task" class="form-control" style="width: auto; margin-right: 20px;"/>
        <br />
        Deadline: <input type="date" name="deadline" class="form-control" style="width: auto;"/>
        <br/>
        <input class="btn-post btn" type="submit" name="post" value="Save" />
      </form>
    </section>

    <section id="edittask" style="display: none">
      <h1>Edit your Todo Task</h1>
      <form method="post" action="/Edit1" class="form-inline">
        Task: <input type="text" name="task" id="edittaskname" class="form-control" style="width: auto; margin-right: 20px;"/>
        <br />
        Deadline: <input type="date" name="deadline" id="editdeadline" class="form-control" style="width: auto;" />
        <input class="btn-post btn" type="submit" name="post" value="Save" />
      </form>
    </section>

    <table id="tablelist" class="table table-bordered" style="margin:30px">
